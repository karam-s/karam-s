num1 = float(input("enter the first number: "))
num2 = float(input("enter the second number: "))
the_p= input ("enter * for product, + for sum, - for sub, / for div:")

if the_p == '*':
    print(num1*num2)
elif the_p == '+':
    print(num1+num2)
elif the_p == '-':
    print(num1-num2)
elif the_p == '/':
    print(num1/num2)
